{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "outDir": "build",
    "sourceMap": true,
    "inlineSources": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2015",
    "noImplicitAny": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2023", "dom"],
    "baseUrl": ".",
    "paths": {
      "#tests/*": ["tests/*"],
      "#tests": ["tests"],
      "#modules/*": ["src/modules/*"],
      "#main/*": ["src/main/*"],
      "#main": ["src/main"],
      "#utils/*": ["src/utils/*"],
      "#utils": ["src/utils"]
    }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "../vlc/src/play/adapters.ts",
    "../vlc/src/play/player/tests/PlayerServiceMock.ts",
    "../vlc/src/play/PlayService.ts",
    "../shared/src/utils/tests/projectFolders.ts",
    "../vlc/src/play/PlayServiceMock.ts"
  ],
  "exclude": ["node_modules"],
  "types": ["node"]
}
