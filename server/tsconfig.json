{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSources": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@actions/*": ["src/actions/*"],
      "@routes/*": ["src/routes/*"],
      "@db/*": ["src/db/*"],
      "@models/*": ["src/db/models/*"],
      "@tests/*": ["tests/*"],
    }
  },
  "include": [
    "src/**/*.ts", "tests/*.ts",
  ],
  "files": [
    "index.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "types": [
    "node"
  ],
  "typeRoots": [
    "../node_modules/@types"
  ]
}