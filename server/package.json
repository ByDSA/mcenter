{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "start": "NODE_ENV=production node build/index.js",
    "start:watch": "NODE_ENV=development nodemon",
    "build": "pnpm build:clean && pnpm build:raw",
    "build:raw": "tsc -p tsconfig-build.json && tsc-alias -p tsconfig-build.json",
    "build:clean": "rm -rf build",
    "test": "NODE_ENV=test jest --maxWorkers=1 --testPathIgnorePatterns=VLCProcess*",
    "test:watch": "pnpm run test --watch",
    "test:coverage": "pnpm run test --coverage",
    "test:coverage:clean": "rm -rf coverage",
    "migrate": "./src/main/db/migrations/migrate.sh"
  },
  "dependencies": {
    "#shared": "workspace:../shared/build",
    "axios": "1.5.0",
    "cors": "2.8.5",
    "date-ops": "2.2.0",
    "dotenv": "16.3.1",
    "envalid": "7.3.1",
    "express": "4.18.2",
    "find-process": "1.4.7",
    "helmet": "7.0.0",
    "jsdom": "22.1.0",
    "luxon": "3.4.2",
    "mongoose": "7.5.0",
    "node-schedule": "2.1.1",
    "rand-picker": "1.1.0",
    "serve-index": "1.9.1"
  },
  "devDependencies": {
    "#sharedSrc": "workspace:../shared/src",
    "@types/cors": "^2.8.14",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.4",
    "@types/jsdom": "21.1.1",
    "@types/luxon": "3.3.1",
    "@types/node": "18.17.14",
    "@types/node-schedule": "2.1.0",
    "@types/serve-index": "^1.9.1",
    "@types/supertest": "2.0.12",
    "nodemon": "2.0.20",
    "supertest": "6.3.3",
    "ts-node": "10.9.1",
    "tsc-alias": "1.8.7",
    "zod": "3.22.2",
    "jest": "workspace:../node_modules/jest"
  }
}
