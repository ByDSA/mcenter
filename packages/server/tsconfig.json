{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": false, // Para no necesitar tslib en producción
    "inlineSources": true,
    "jsx": "react-jsx", // React
    "lib": ["dom", "es2024"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "build",
    "paths": {
      "#core": ["src/core"],
      "#core/*": ["src/core/*"],
      "#episodes/*": ["src/modules/episodes/*"],
      "#modules/*": ["src/modules/*"],
      "#musics/*": ["src/modules/musics/*"],
      "#series/*": ["src/modules/series/*"],
      "#tests": ["tests"],
      "#tests/*": ["tests/*"],
      "#utils": ["src/utils"],
      "#utils/*": ["src/utils/*"]
    },
    "skipLibCheck": true, // Para que no compruebe 'noImplicitAny' en las librerías de terceros
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",

    // React
    "src/**/*.tsx",
    "tests/**/*.tsx"
  ],
  "types": ["node"]
}
