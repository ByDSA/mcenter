{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": false, // Para no necesitar tslib en producción
    "inlineSources": true,
    "lib": ["dom", "es2023"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "build",
    "paths": {
      "#episodes/*": ["src/modules/episodes/*"],
      "#main": ["src/main"],
      "#main/*": ["src/main/*"],
      "#modules/*": ["src/modules/*"],
      "#musics/*": ["src/modules/musics/*"],
      "#series/*": ["src/modules/series/*"],
      "#tests": ["tests"],
      "#tests/*": ["tests/*"],
      "#utils": ["src/utils"],
      "#utils/*": ["src/utils/*"]
    },
    "skipLibCheck": true, // Para que no compruebe 'noImplicitAny' en las librerías de terceros
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "types": ["node"]
}
