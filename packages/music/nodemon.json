{
  "events": {
    "start": "node -e 'console.clear()'"
  },
  "exec": "node --env-file .env.dev --inspect -r ts-node/register -r tsconfig-paths/register ./src/index.ts",
  "ext": "ts,yaml,json,html,handlebars,env",
  "ignore": ["**/*.test.ts", "**/*.spec.ts", ".git", "node_modules"],
  "watch": ["src", "nodemon.json", ".env.dev"]
}
